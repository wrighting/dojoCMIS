<extension>
   <modules>
      <module>
         <id>wrightingWork Package</id>
         <version>1.0</version>
         <auto-deploy>true</auto-deploy>
         <configurations>
           <config evaluator="string-compare" condition="WebFramework" replace="false">
             <web-framework>
                <dojo-pages>
                  <packages>
                    <package name="wrighting" location="js/dojoCMIS/${project.version}/wrighting"/>
                    <package name="dgrid" location="resources/webjars/dgrid/${dependency.dgrid.version}"/>
                    <package name="dstore" location="resources/webjars/dstore/${dependency.dstore.version}"/>
                  </packages>
               </dojo-pages>
             </web-framework>
           </config>
         </configurations>
      </module>
   </modules>
</extension>
